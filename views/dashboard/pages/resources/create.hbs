<!-- Page Wrapper -->
<div id="wrapper">

  <!-- Sidebar -->
  {{>"sidebar"}}
  <!-- End of Sidebar -->


  <!-- Content Wrapper -->
  <div id="content-wrapper" class="d-flex flex-column">

    <!-- Main Content -->
    <div id="content">

      <!-- Topbar -->
      {{>"topbar"}}
      <!-- End of Topbar -->

      <!-- Begin Page Content -->
      <div class="container-fluid">

        <!-- Page Heading -->
        {{!-- <h1 class="h3 mb-4 text-gray-800">Resources</h1> --}}
        <!-- DataTales Example -->
        <div class="card shadow mb-4">
          <div class="card-header py-3">
            <h5 class="m-0 font-weight-bold text-primary">New Resource
              <a href="/resource/list" class="d-none d-sm-inline-block btn btn-sm btn-primary shadow-sm float-right"><i
                  class="fas fa-arrow-left fa-sm text-white"></i> Back </a>
            </h5>
          </div>
          <div class="card-body">
            <form>
              <div class="form-group row">
                <label class="col-sm-1" for="resName">Name</label>
                <input type="text" class="form-control col-sm-11" id="resName"
                  placeholder="Name of the resouce you want to create">
              </div>
              <div class="form-group row">
                <label class="col-sm-1">Fields</label>
                <div class="row col-sm-11">
                  <input type="text" class="form-control form-control-sm col-sm-5 mr-2" id="field-1" placeholder="Field Name">
                  <select class="form-control form-control-sm col-sm-5  mr-2" id="value-1" 
                    aria-label="Example select with button addon">
                    <option selected>Choose Type...</option>
                    <option value="string">String</option>
                    <option value="number">Number</option>
                    <option value="boolean">Boolean</option>
                  </select>
                  <button class="float-right btn btn-sm btn-success ">+</button>
                </div>
              </div>
              <div class="form-group">
                <button class="float-right btn btn-sm btn-primary">Submit</button>
              </div>
            </form>
          </div>
        </div>
      </div>
      <!-- /.container-fluid -->

    </div>
    <!-- End of Main Content -->
    <!-- Footer -->
    {{>"footer"}}
    <!-- End of Footer -->
  </div>
  <!-- End of Content Wrapper -->

</div>
<!-- End of Page Wrapper -->