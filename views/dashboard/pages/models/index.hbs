<!-- Page Wrapper -->
<div id="wrapper">

  <!-- Sidebar -->
  {{>"sidebar"}}
  <!-- End of Sidebar -->


  <!-- Content Wrapper -->
  <div id="content-wrapper" class="d-flex flex-column">

    <!-- Main Content -->
    <div id="content">

      <!-- Topbar -->
      {{>"topbar"}}
      <!-- End of Topbar -->

      <!-- Begin Page Content -->
      <div class="container-fluid">

        <!-- Page Heading -->
        {{!-- <h1 class="h3 mb-4 text-gray-800">Models</h1> --}}
        <!-- DataTales Example -->
        <div class="card shadow mb-4">
          <div class="card-header py-3">
            <h5 class="m-0 font-weight-bold text-primary">Model List
              <a href="/models/new" class="d-none d-sm-inline-block btn btn-sm btn-primary shadow-sm float-right"><i
                  class="fas fa-download fa-sm text-white"></i> New Model</a>
            </h5>
          </div>
          <div class="card-body">
            <div class="table-responsive">
              <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                <thead>
                  <tr>
                    <th>Name</th>
                    <th>Methods</th>
                    <th>Created On</th>
                    <th>Last Updated</th>
                    <th>Actions</th>
                  </tr>
                </thead>
                <tfoot>
                  <tr>
                    <th>Name</th>
                    <th>Methods</th>
                    <th>Created On</th>
                    <th>Last Updated</th>
                    <th>Actions</th>
                  </tr>
                </tfoot>
                <tbody>
                  {{#each models}}
                  <tr>
                    <td>{{name}}</td>
                    <td>
                      {{#each method as |mthd|}}
                      <label class="badge badge-info">{{mthd}}</label>
                      {{/each}}
                    </td>
                    <td>{{format-date createAt}}</td>
                    <td>{{format-date updatedAt}}</td>
                    <td>
                      <a class="badge badge-info" title="View" href="/models/{{id}}/view"><i
                          class="fa fa-eye text-light"></i></a>
                      <a class="badge badge-primary" href="/models/{{id}}/edit" title="Edit"><i
                          class="fa fa-pencil-alt text-light"></i></a>
                      <a class="badge badge-danger" href="/models/{{id}}/delete" title="Delete"><i
                          class="fa fa-trash text-light"></i></a>

                    </td>
                  </tr>
                  {{/each}}


                </tbody>
              </table>
            </div>
          </div>
        </div>
      </div>
      <!-- /.container-fluid -->

    </div>
    <!-- End of Main Content -->
    <!-- Footer -->
    {{>"footer"}}
    <!-- End of Footer -->
  </div>
  <!-- End of Content Wrapper -->

</div>
<!-- End of Page Wrapper -->