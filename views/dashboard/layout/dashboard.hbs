        headers: {
          'Content-Type': 'application/json',
          'Authorization': "Bearer " + localStorage.getItem("HIT_HTTP_access_token")
        },
        body: "" // body data type must match "Content-Type" header
      });
      const resData = await res.json();
      window.location.replace("/login");
    })
  </script>
